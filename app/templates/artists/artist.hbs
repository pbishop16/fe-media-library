<div class="artist">
  <h2>{{model.name}}</h2>
  <h3>Founding Year: {{model.founding_year}}</h3>
  <h4>Location: {{model.based_in}}</h4>
  <h4>Total Albums Sold: {{model.totalAlbumsSold}}</h4>
  <ul class="albums-list">
    {{#each model.album_ids as |album|}}
      {{#link-to 'albums.album' album}}
        <li class="album-item">{{album.name}}</li>
      {{/link-to}}
    {{/each}}
  </ul>
</div>
